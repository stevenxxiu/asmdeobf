{
  "root": true,
  "ecmaFeatures": {
    "modules": true
  },
  "env": {
    "browser": true,
    "node": true
  },
  "parser": "babel-eslint",
  "rules": {
    "indent": ["error", 2, {"SwitchCase": 1}],
    "linebreak-style": ["error", "unix"],
    "max-len": ["error", 120],
    "comma-dangle": ["error", "always-multiline"],
    "no-console": "off",
    "no-constant-condition": ["error", {"checkLoops": false}],
    "no-empty": "off",
    "no-unused-vars": ["error", {
      "args": "after-used",
      "argsIgnorePattern": "^_",
      "varsIgnorePattern": "^_"
    }],
    "quotes": ["error", "single"],
    "semi": ["error", "never"]
  },
  "plugins": [
    "react-pug"
  ],
  "extends": [
    "eslint:recommended",
    "plugin:react-pug/all"
  ]
}
